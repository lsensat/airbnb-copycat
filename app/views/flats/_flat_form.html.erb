<%= simple_form_for(@flat) do |f| %>
  <%= f.input :flat_type, collection: ['Room', 'Shared Room', 'Place to stay'] %>
  <%= f.input :description %>
  <%= f.input :street %>
  <%= f.input :zip %>
  <%= f.input :city %>
  <%= f.input :country, as: :country, input_html: {label: 'Country', class: 'form-select'} %>
  <%= f.input :bedrooms %>
  <%= f.input :baths %>
  <%= f.input :guests %>
  <%= f.association :amenities, as: :check_boxes %>

  <%= f.input :price %>
  <%= f.input :checkin %>
  <%= f.input :checkout %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit class: 'btn-action margin-bottom' %>
<% end %>

<% if controller.action_name == "edit" %>
  <%= link_to "Remove place", flat_path(@flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn-delete" %>
<% end %>
